{
  "auth": {
    "profiles": {
      "openai:api": {
        "provider": "openai",
        "mode": "api_key"
      }
    },
    "order": {
      "openai": ["openai:api"]
    }
  },
  "gateway": {
    "mode": "local",
    "port": 18789,
    "bind": "loopback",
    "http": {
      "endpoints": {
        "chatCompletions": {
          "enabled": true
        }
      }
    }
  },
  "agents": {
    "defaults": {
      "model": {
        "primary": "openai/gpt-4o-mini"
      }
    },
    "list": [
      {
        "id": "forge",
        "workspace": "./sandbox/forge",
        "sandbox": {
          "mode": "all",
          "scope": "agent",
          "workspaceAccess": "rw"
        },
        "tools": {
          "allow": ["read", "write"],
          "deny": ["exec", "edit", "apply_patch", "browser", "gateway", "process"]
        }
      },
      {
        "id": "vector",
        "workspace": "./sandbox/vector",
        "sandbox": {
          "mode": "all",
          "scope": "agent",
          "workspaceAccess": "rw"
        },
        "tools": {
          "allow": ["read", "write"],
          "deny": ["exec", "edit", "apply_patch", "browser", "gateway", "process"]
        }
      }
    ]
  },
  "skills": {
    "load": {
      "extraDirs": ["./runtime/openclaw/skills"]
    }
  }
}
